{
  "name": "vue-admin-core",
  "private": false,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite -d --clearScreen",
    "serve": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "prettier": "prettier --write src/",
    "stylelint": "stylelint src/**/*.{css,vue}",
    "eslint": "eslint --ext .js,.vue,.jsx,.ts,.tsx src --fix",
    "lint": "pnpm run eslint & pnpm run stylelint & pnpm run prettier",
    "prepare": "husky install",
    "test": "vitest --config ./config/vitest/vitest.config.ts",
    "coverage": "vitest run --coverage",
    "cypress": "cypress open",
    "upp": "npx esno ./script/update-package.ts"
  },
  "dependencies": {
    "@unocss/reset": "^0.57.7",
    "@vueuse/core": "^10.6.1",
    "await-to-js": "^3.0.0",
    "axios": "^1.6.2",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/eslint-parser": "^7.23.3",
    "@types/node": "^20.9.4",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@unocss/transformer-attributify-jsx": "^0.57.7",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vue/eslint-config-typescript": "^12.0.0",
    "autoprefixer": "^10.4.16",
    "cypress": "^13.6.0",
    "eslint": "^8.54.0",
    "eslint-config-alloy": "^5.1.2",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-vue": "^9.18.1",
    "happy-dom": "^12.10.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "postcss": "^8.4.31",
    "postcss-html": "^1.5.0",
    "postcss-jsx": "^0.36.4",
    "postcss-nesting": "^12.0.1",
    "postcss-syntax": "^0.36.2",
    "prettier": "^3.1.0",
    "rollup-plugin-visualizer": "^5.9.2",
    "stylelint": "^15.11.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "typescript": "^5.3.2",
    "unocss": "^0.57.7",
    "vite": "^5.0.2",
    "vite-plugin-mpa-plus": "^0.5.4",
    "vitest": "^0.34.6",
    "vue-eslint-parser": "^9.3.2",
    "vue-tsc": "^1.8.22"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "lint-staged": {
    "src/**/*.{ts,vue}": [
      "eslint --fix"
    ],
    "src/**/*.{css,vue}": [
      "stylelint --fix"
    ],
    "src/**/*.{ts,vue,css}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true
    },
    "parser": "vue-eslint-parser",
    "ignorePatterns": [],
    "parserOptions": {
      "parser": {
        "js": "@babel/eslint-parser",
        "jsx": "@babel/eslint-parser",
        "ts": "@typescript-eslint/parser",
        "tsx": "@typescript-eslint/parser"
      }
    },
    "extends": [
      "alloy",
      "alloy/vue",
      "alloy/typescript",
      "plugin:cypress/recommended"
    ],
    "rules": {
      "@typescript-eslint/prefer-optional-chain": "off"
    }
  },
  "stylelint": {
    "root": true,
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-standard-vue"
    ],
    "ignoreFiles": [
      "**/*/*.svg",
      "**/*/.png"
    ],
    "rules": {
      "declaration-property-value-no-unknown": true
    }
  },
  "prettier": {
    "semi": true
  },
  "volta": {
    "node": "18.17.1",
    "npm": "10.1.0"
  }
}
